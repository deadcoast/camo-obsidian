{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "lib": ["DOM", "ES5", "ES6", "ES7"]
  },
  "include": [
    "main.ts",
    "ui/**/*.ts",
    "core/camoMetaData.ts",
    "core/camoIRExecutor.ts"
, "security/SecurityIntegration.ts"  ],
  "exclude": [
    "modules/**",
    "accessibility/**",
    "error_control/**",
    "compatibility/**",
    "compilers/**",
    // keep most core excluded, but allow explicit include above for camoMetaData.ts
    "core/**",
    "engines/**",
    "extractors/**",
    "performance/**",
    "processors/**",
    "security/**"
  ]
}
